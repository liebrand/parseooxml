{
  "rules": {
    "block-scoped-var": 0,
    "camelcase": 0,
    "comma-spacing": 0,
    "consistent-return": 0,
    "eol-last": 0,
    "eqeqeq": 2,
    "global-strict": 0,
    "key-spacing": 0,
    "max-len": [2, 80],
    "new-cap": [0],
    "no-array-constructor": 0,
    "no-comma-dangle": 0,
    "no-console": 0,
    "no-constant-condition": 0,
    "no-empty": 0,
    "no-eq-null": 2,
    "no-extend-native": 0,
    "no-extra-bind": 0,
    "no-irregular-whitespace": 2,
    "no-loop-func": 0,
    "no-multi-spaces": 0,
    "no-multi-str": 2,
    "no-new-func": 2,
    "no-process-exit": 0,
    "no-return-assign": 0,
    "no-shadow": 0,
    "no-shadow-restricted-names": 0,
    "no-spaced-func": 0,
    "no-trailing-spaces": 0,
    "no-underscore-dangle": 0,
    "no-unused-expressions": 0,
    "no-unused-vars": [2, {"vars": "all", "args": "all"}],
    "no-use-before-define": 0,
    "quotes": 0,
    "semi": 2,
    "space-infix-ops": 0,
    "space-return-throw-case": 0,
    "strict": 0,
    "yoda": 0
  },

  "env": {
    "browser": true,
    "amd": true,
    "mocha": true
  },

  "globals": {
      "_": true,
      "console": true,
      "Promise": true,
      "sinon": true,
      "chai": true,
      "assert": true,
      "process": true
  }
}
